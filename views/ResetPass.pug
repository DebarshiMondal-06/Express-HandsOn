extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Reset your Password
            form.form.reset--form(data-token=`${token}`)
                .form__group
                    label.form__label(for='email') Password
                    input#passwordReset.form__input(type='password', placeholder='********', required, minlength='8')
                .form__group.ma-bt-md
                    label.form__label(for='password') Confirm Password
                    input#passwordResetConfirm.form__input(type='password', placeholder='********',, required, minlength='8')
                .form__group
                    button#btn-dis-reset.btn.btn--green.text-login Reset