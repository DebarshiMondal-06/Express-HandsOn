extends base

block content
    main.main
        .card-container
            each alltours in result
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`img/tours/${alltours.imageCover}`, alt=`${alltours.name}`)
                        h3.heading-tertirary
                            span=alltours.name

                    .card__details
                        h4.card__sub-heading=`${alltours.difficulty} ${alltours.duration}-dat tour`
                        p.card__text=alltours.summary
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-map-pin')
                            span=alltours.startLocation.description
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-calendar')
                            span=alltours.startDates[0].toLocaleString('en-in',{ day: 'numeric', month: 'long', year: 'numeric' })
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-flag')
                            span=`${alltours.locations.length} stops`
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-user')
                            span=`${alltours.maxGroupSize} peoples`

                    .card__footer
                        p
                            span.card__footer-value=`$${alltours.price} `
                            span.card__footer-text per person
                        p.card__ratings
                            span.card__footer-value=alltours.ratingAverage.toFixed(2)
                            span.card__footer-text=` rating (${alltours.ratingQuantity})`
                        a.btn.btn--green.btn--small(href=`/tours/${alltours.slug}`) Details