header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All Tours
    .header__logo
        img(src='/img/logo-white.png', alt='Natours logo')
    nav.nav.nav--user
        if user
            a.nav__el(href='/logout') LogOut
                img.nav__user-img(src=`/img/users/${user.photo}`, alt="User photo")
                span= user.name.split(' ')[0]
        else
            a.nav__el(href="/login") Login In
            a.nav__el.nav__el--cta SignUp